<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <TextView
      android:id="@+id/contact_name_call"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@+id/buttons_call_container"
      android:layout_centerHorizontal="true"
      android:layout_margin="8dp"
      android:textSize="24sp"/>

  <LinearLayout
      android:id="@+id/buttons_call_container"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:orientation="horizontal">

    <ImageView
        android:id="@+id/button_call_disconnect"
        android:layout_width="@dimen/btn_size"
        android:layout_height="@dimen/btn_size"
        android:layout_marginEnd="@dimen/btn_margin"
        android:layout_marginRight="@dimen/btn_margin"
        app:srcCompat="@drawable/disconnect"
        android:contentDescription="@string/disconnect_call"/>

    <ImageView
        android:id="@+id/button_call_switch_camera"
        android:layout_width="@dimen/btn_size"
        android:layout_height="@dimen/btn_size"
        android:layout_marginEnd="@dimen/btn_margin"
        android:layout_marginRight="@dimen/btn_margin"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:contentDescription="@string/switch_camera"/>

    <ImageView
        android:id="@+id/button_call_scaling_mode"
        android:layout_width="@dimen/btn_size"
        android:layout_height="@dimen/btn_size"
        app:srcCompat="@drawable/ic_action_return_from_full_screen"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/button_call_toggle_mic"
        android:layout_width="@dimen/btn_size"
        android:layout_height="@dimen/btn_size"
        android:layout_marginEnd="@dimen/btn_margin"
        android:layout_marginRight="@dimen/btn_margin"
        app:srcCompat="@drawable/ic_mic"
        android:contentDescription="@string/toggle_mic"/>
  </LinearLayout>

</RelativeLayout>
